<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_open_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Select opening hour"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <NumberPicker
            android:id="@+id/open_hour"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/textView_open_hour"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textView_close_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="12dp"
            android:text="Select closing hour"
            app:layout_constraintTop_toBottomOf="@id/open_hour"
            app:layout_constraintStart_toStartOf="parent"/>

        <NumberPicker
            android:id="@+id/closing_hour"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/textView_close_hour"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textView_open_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="12dp"
            android:text="Select opening minute"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/textView_open_hour"/>

        <NumberPicker
            android:id="@+id/open_minute"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/textView_open_minute"
            app:layout_constraintStart_toStartOf="@+id/textView_open_minute"/>

        <TextView
            android:id="@+id/textView_close_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:text="Select closing minute"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/open_minute"
            app:layout_constraintStart_toStartOf="@+id/textView_open_minute"/>

        <NumberPicker
            android:id="@+id/closing_minute"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/textView_close_minute"
            app:layout_constraintStart_toStartOf="@+id/textView_open_minute"/>













    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/button_done"
        android:layout_width="90dp"
        android:layout_height="46dp"
        android:text="Done"
        app:layout_constraintTop_toBottomOf="@id/relativelayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>



</android.support.constraint.ConstraintLayout>