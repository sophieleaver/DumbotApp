<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <TextView
        android:id="@+id/text_delivery_cancel"
        android:text="Are you sure you would like to cancel delivery of the 15kg dumbbell?"
        android:layout_width="320dp"
        android:layout_height="92dp"
        android:textSize="22sp"
        android:fontFamily="@font/muli_light"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_confirm_del"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Confirm"
        android:layout_width="126dp"
        android:layout_height="50dp"
        android:layout_marginEnd="28dp"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/muli"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_delivery_cancel"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_return_del"
        style="@style/Widget.AppCompat.Button"
        android:text="Back"
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/muli"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_confirm_del"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_delivery_cancel"
        app:layout_constraintVertical_bias="0.764" />
</android.support.constraint.ConstraintLayout>