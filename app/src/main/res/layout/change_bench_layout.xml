<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">


    <Button
        android:id="@+id/button_bench_1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:fontFamily="@font/muli"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_bench_2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="24sp"
        android:fontFamily="@font/muli"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/button_bench_6"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@+id/button_bench_1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_bench_3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:fontFamily="@font/muli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_bench_4"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:fontFamily="@font/muli"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_bench_1" />

    <Button
        android:id="@+id/button_bench_5"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:fontFamily="@font/muli"
        app:layout_constraintEnd_toStartOf="@+id/button_bench_6"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toEndOf="@+id/button_bench_4"
        app:layout_constraintTop_toBottomOf="@+id/button_bench_2" />

    <Button
        android:id="@+id/button_bench_6"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:fontFamily="@font/muli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_bench_3" />
</android.support.constraint.ConstraintLayout>